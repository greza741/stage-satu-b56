    <h1 class="GIT">Edit post blog</h1>
    <form action="/edit-blog/{{data.id}}" method="POST" style="width: 500px;">
        <div>
            <label for="projectInput">Project Name</label>
            <input value="{{data.title}}" name="title" id="projectInput" type="text" placeholder="Input Project Name">
        </div>
        <div style="flex-direction: row;justify-content: space-between;">
            <div>
                <label for="startDate">Start Date</label>
                <input value="{{data.startDate}}" name="startDate" style="padding-inline-end: 128px;" id="startDate"
                    type="date" placeholder="Starting Date">
            </div>
            <div>
                <label for="endDate">End Date</label>
                <input value="{{data.endDate}}" name="endDate" style="padding-inline-end: 128px;" id="endDate"
                    type="date" placeholder="Ending Date">
            </div>
        </div>
        <div>
            <label for="inputContent">Content</label>
            <textarea name="inputContent" style="padding: 30px;" id="inputContent"
                placeholder="Input Your Content"> {{data.content}}</textarea>
        </div>
        <label>Technologies :</label>
        <div style="flex-direction: row; padding-top: 10px;" class="checkbox">
            <div>
                <div style="flex-direction: row;">
                    <input type="checkbox" id="inputNode">
                    <label for="inputNode">Node Js</label>
                </div>
                <div style="flex-direction: row;">
                    <input type="checkbox" id="inputNext">
                    <label for="inputNext">Next Js</label>
                </div>
            </div>
            <div style="padding-left: 100px;">
                <div style="flex-direction: row;">
                    <input type="checkbox" id="inputReact">
                    <label for="inputReact">React Js</label>
                </div>
                <div style="flex-direction: row;">
                    <input type="checkbox" id="inputType">
                    <label for="inputType">TypeScript</label>
                </div>
            </div>
        </div>
        <div>
            <label for="inputImage">Upload Image</label>
            <input style="background-color: rgb(255, 255, 255);
             padding: 0px;
              border: 1px solid;" id="inputImage" type="file" placeholder="Input Your Image">
        </div>
        <input type="" name="createdAt" value="{{data.createdAt}}" hidden>
        <input type="" name="author" value="{{data.author}}" hidden>
        <button>Update</button>
    </form>
    <div class="blog-div1"></div>
</body>
<script src="/Assets/js/blog.js"></script>

